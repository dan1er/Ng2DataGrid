{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "stripInternal": true,
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "files": [
      "./data-grid/data-grid.module.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}
